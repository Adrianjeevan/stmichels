---
import Forms from "../form/Form"
import "../form/form.scss"
---

<section class="contact-sections">
    <div class="container">
      <div class="row">
        <div class="col-lg-5">
            <Forms client:load />
        </div>
        <div class="col-lg-5">
           <div>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3894.6176444494595!2d77.4179625!3d12.541469999999999!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bae5850a8044921%3A0x50a6630d74280f58!2sSt.%20Michel&#39;s%20English%20School%2C%20Kanakapura!5e0!3m2!1sen!2sin!4v1687078702811!5m2!1sen!2sin" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
           </div>
        </div>
      </div>
    </div>
</section>

<style lang="scss">

  .contact-sections{
    .row{
   
   width: 100%;
   padding-bottom: 5rem;
  
  justify-content: center;
  gap: 2rem;
  

  >:nth-child(1){
   padding: 0;
   display: flex;
   justify-content: center;
   align-items: center;
   border-radius: 20px;
   background: linear-gradient(0.25turn, #e06513, #f19708, #eba306);

   form{
    width: 100% !important;
   }
  }
  >:nth-child(2){
   padding: 0;
   margin: 0;
   // width: 100%;
       height: 500px;

   >div{
     width: 100%;
       height: 100%;
     iframe{
       width: 100%;
       height: 100%;
     }
   }
  }
 }
  }
  



  @media screen and  (max-width: 820px) {
     .contact-sections{
      .row{
       
        >:nth-child(1){
          padding: 2rem 0;
          width: 500px !important;
        }
        >:nth-child(2){
          padding: 2rem 0;
          width: 500px !important;
        }
      }
     }
  }
  @media screen and  (max-width: 425px) {
     .contact-sections{
      .row{
        // background-color: red;
        margin: 0 auto !important;
        >:nth-child(1){
          padding: 2rem 0;
          width: 350px !important;

          .form{
              input, select{
                width: 20px !important;
              }
            }
        }
        >:nth-child(2){
          padding: 2rem 0;
          width: 350px !important;
        }
      }
     }
  }
</style>