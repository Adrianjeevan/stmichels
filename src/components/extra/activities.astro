---
import Act1 from "../images/activities/act1.jpg";
import Act2 from "../images/activities/act2.jpg";
import Act3 from "../images/activities/act3.jpg";
import "./act.css";
import Roundbtn from "../Button/roundbtn.astro";
import Highlightcard from "../highlightcard/highlightcard.astro";

export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<section class="activity">
    <div class="container">
        <h2 class="title text-center pb-5">
            Our <span>{title}</span>
        </h2>

        <div class="activity-wrapper pt-5 pb-5">
            <div class="holder">
                <Highlightcard
                    title="SPOKEN ENGLISH"
                    image={Act1}
                    words="Building confidence and proficiency in verbal communication through interactive lessons, conversation practice, pronunciation drills, and language fluency exercises."
                />
            </div>

            <div class="holder">
                <Highlightcard
                    title="ABACUS"
                    image={Act2}
                    words="Unlocking the power of mental arithmetic through the ancient art of abacus, enhancing mathematical skills, concentration, memory, and problem-solving abilities."
                />
            </div>

            <div class="holder">
                <Highlightcard
                    title="KARATE"
                    image={Act3}
                    words=" Empowering students through disciplined training, physical fitness, self-defense techniques, and the development of character and resilience."
                />
            </div>
        </div>

       
    </div>
</section>
